*{
  font-family: "Share Tech", sans-serif;
  font-style: normal;
  font-size: x-large;
  color: white;
}

hr, b, .subtitle {
    color: <% opt.style.sub_text %>;
}

h1 {
    font-weight: 900;
    font-size: 2.5rem;
    line-height: 1.1;
}

h2 {
    font-size: 1.75rem;
}

a {
    color: <% opt.style.blue %>;
}

sup {
    color: <% opt.style.blue %>
}

h1, h2, h3 {
    margin-block-start: 0.25em;
    margin-block-end: 0.25em;
}

body{
    display: flex;
    flex-direction: column;
    align-items: center;
    word-wrap: break-word;
    background: <% opt.style.background %>; 
    padding: 0px 2.5%;
}

.header {
    width: 100%;
    align-items: flex-start;
    padding: 25px 25px;
    border-bottom: solid;
    border-bottom-width: thin;
    border-color: <% opt.style.sub_text %>;
}

.menu {
    position: fixed;
    background: <% opt.style.menu_background %>;
    top: 0;
    left: 0;
    width: 100%;
    height: 30px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    transition: opacity 0.3s ease;
    opacity: 0;
}

.menu:hover {
    opacity: 1;
}

.menu a {
    color: <% opt.style.orange %>;
    padding-left: 15px;
    padding-right: 15px;
}

.menu a:hover {
    color: <% opt.style.blue %>;
}

a.article {
    text-decoration: none;
}

.article:hover {
    background: <% opt.style.sub_background %>;
    color: <% opt.style.blue %>;
}

.article_footer {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.content {
    max-width: 60%;
    padding: 40px 25px;
    align-self: start;
}

.blinking {
    animation: blink 2s linear infinite;
}

@keyframes blink{
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  @media only screen and (max-width: 720px) {
  .content {
    max-width: 90%;
  }
}
