*{
  font-family: "Share Tech", sans-serif;
  font-style: normal;
  text-decoration: none;
  color: white;
}

hr, b, .subtitle {
    color: <% opt.style.sub_text %>;
}

sup {
    color: <% opt.style.blue %>
}

h1, h2, h3 {
    margin-block-start: 0.25em;
    margin-block-end: 0.25em;
}

body{
    display: flex;
    flex-direction: column;
    align-items: center;
    word-wrap: break-word;
    background: <% opt.style.background %>; 
    width: 95%;
    margin: 2.5%;
}

.header {
    width: 100%;
    align-items: flex-start;
    padding: 25px 25px;
}


.article:hover {
    background: <% opt.style.sub_background %>;
    color: <% opt.style.blue %>;
}

.article_footer {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
}

.readmore {
    margin-left: auto;
}

.content {
    max-width: 720px;
    padding: 40px 25px;
}

.blinking {
    animation: blink 2s linear infinite;
}

@keyframes blink{
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
